{
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend"
    },
    {
      "src": "/(.*)",
      "dest": "frontend"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build"
}
